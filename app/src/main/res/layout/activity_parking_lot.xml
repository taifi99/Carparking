<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkingLot">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewID1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/curve_design_background"
        android:clickable="true"
        app:cardBackgroundColor="#0000ff"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="3dp"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/welcomeHomeID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/curve_design_background"
            android:gravity="center"
            android:text="Parkings"
            android:textColor="#fff"
            android:textSize="23sp"
            android:clickable="true"
            android:fontFamily="@font/idroid"/>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_alignEnd="@+id/cardViewID1"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp" />

</RelativeLayout>