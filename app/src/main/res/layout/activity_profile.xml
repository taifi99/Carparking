<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000ff"
    tools:context=".Profile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="5dp"
            android:background="@android:color/transparent">
            <ImageView
                android:id="@+id/profilePicID"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/download"
                android:clickable="true"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:background="#0000ff">

                <TextView
                    android:id="@+id/usernameBelowProfilePicID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:text="Name"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:id="@+id/emailBelowProfilePicID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:typeface="serif"
                    android:text="xyz@gamil.com"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/contact_mail" />

                <EditText
                    android:id="@+id/phoneBelowProfilePicID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:typeface="serif"
                    android:text="1234567890"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:textColorHint="#ffffff"/>

                <Button
                    android:id="@+id/saveButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/youawesomebutton"
                    android:text="Update Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="23dp"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_marginTop="30dp"/>

                <Button
                    android:id="@+id/youAwesomeButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="30dp"
                    android:drawableRight="@drawable/you_are_awesome" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>